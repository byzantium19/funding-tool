# Standalone wallet funding CLI - working .env

# =============================================================================
# SOLANA RPC CONFIGURATION
# =============================================================================
HELIUS_API_KEY=613663c2-03cc-4a7c-be92-8239e2cb7cf1    # Free Helius key for testing

# =============================================================================
# MAIN FUNDING CONFIGURATION
# =============================================================================
MIN_SOL_AMOUNT=0.001                        # Minimum SOL amount to check for (small for testing)
HOURS_LOOKBACK=24                           # Hours to look back for transactions
FUNDING_AMOUNT_SOL=0.001                    # Amount of SOL to send to each unfunded wallet (small for testing)

# =============================================================================
# FILE PATHS
# =============================================================================
DONORS_FILE=donors-example.csv              # CSV/JSON file with donor wallets (must have private keys)
RECIPIENTS_FILE=recipients-example.csv      # CSV/JSON file with recipient wallet addresses

# =============================================================================
# SAFETY SETTINGS
# =============================================================================
DRY_RUN=true                               # true = show what would happen, false = execute real transactions
MAX_FUNDING_OPERATIONS=3                   # Maximum wallets to fund in one run (safety limit)
